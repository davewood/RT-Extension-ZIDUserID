<%ARGS>
$Transaction
</%ARGS>
<%INIT>
my $User     = $Transaction->CreatorObj;
my $name     = $User->Name;
my $uaccount = '';
if (
    $name !~ m/^(RT_System|Nobody)$/xms
    && $name =~ m/^[a-zA-Z0-9]+$/xmsi
    && $User->Privileged
) {
  my $url = "https://www.univie.ac.at/ZID/uaccount/admin/index.html?action=detail&username=$name";
  $uaccount = qq!<a href="$url" style="border:margin-left:3px">$name uaccount</a>!;
}
</%INIT>
<% $uaccount | n %>\
